package tron;

/**
 * Esta clase define el poder de hipervelocidad
 * @author Fabian,Adonnis,Erick,Victor
 */
public class Hipervelocidad {
	//Atributos de la clase de hipervelocidad
	private int _valor;
	private int _tiempo;
	
	/**
	 * Constructor y asignacion de valor y tiempo del poder de hipervelocidad
	 */
	public Hipervelocidad() {
		_valor = 5;
		_tiempo = 5;
	}
	
	/**
	 * Metodo que devuelve el valor del poder hipervelocidad
	 * @return El valor del poder de hipervelocidad
	 */
	public int getValor() {
		return _valor;
	}
	
	/**
	 * Metodo que devuelve el tiempo de duracion del poder hipervelocidad
	 * @return El tiempo de duracion del poder hipervelocidad
	 */
	public int getTiempo() {
		return _tiempo;
	}
}
